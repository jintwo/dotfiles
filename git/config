[user]
    name = Eugeny Volobuev
    email = qulert@gmail.com

[credential]
    helper = osxkeychain

[color]
    ui = auto

[alias]
    ci = commit
    st = status --short
    co = checkout
    cob = checkout -b
    br = branch
    in = !git log ..origin/master
    out = !git log origin/master..
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	pf = push --force-with-lease
	dft = difftool

[core]
    excludesfile = ~/.gitignore
    quotepath = false
    autocrlf = input

[push]
    default = current

[pull]
    rebase = true

[rebase]
    autoStash = true

[add.interactive]
    useBuiltin = false

[magit]
    hideCampaign = true

[diff]
	tool = difftastic

[difftool]
	prompt = false

[difftool "difftastic"]
	cmd = difft --syntax-highlight off --display side-by-side-show-both "$LOCAL" "$REMOTE"

[pager]
	difftool = true

[merge]
    conflictstyle = diff3
    tool = ediff

[mergetool "ediff"]
    cmd = emacs --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"
