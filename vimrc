set nocompatible
filetype off

set encoding=utf-8
set showcmd
set number
set nowrap
set tabstop=4
set shiftwidth=4
set expandtab
set backspace=indent,eol,start
set t_Co=256
set hlsearch
set incsearch
set ignorecase
set smartcase
set laststatus=2
set background=dark

syntax enable

filetype plugin indent on

